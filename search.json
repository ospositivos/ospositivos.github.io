---
---
[
  {% for post in site.posts %}
    {

      "title"    : "{{ post.title | escape }}",
      "url"      : "{{ site.baseurl }}{{ post.url }}",
      "tags"     : "{{ post.tags | join: ', ' }}",
      "sumario"  : "{{ post.sumario | strip_html | strip_newlines | escape }}",
      "date"     : "{{ post.date | date: "%Y-%m-%d"}}"

    } {% unless forloop.last %},{% endunless %}
  {% endfor %}
]
